{
  "name": "mean-ecommerce-backend",
  "version": "1.0.0",
  "description": "MEAN Stack E-Commerce Backend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "node --watch src/server.js",
    "lint": "biome check src --error-on-warnings",
    "format": "biome format src --write",
    "format:check": "biome check --reporter=summary",
    "build": "esbuild src/server.js --bundle --platform=node --format=esm --target=node20 --outfile=dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest -w",
    "check": "ultracite check",
    "fix": "ultracite fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.2.1",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.11",
    "slugify": "^1.6.6",
    "stripe": "^20.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "prettier": "^3.0.3",
    "ultracite": "^7.1.4",
    "vitest": "^4.0.18"
  }
}
